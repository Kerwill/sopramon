<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
xmlns="http://java.sun.com/xml/ns/persistence"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="SopramonPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>fr.sopra.model.game.Achat</class>
    <class>fr.sopra.model.game.Boss</class>
    <class>fr.sopra.model.game.Capacite</class>
    <class>fr.sopra.model.game.Combat</class>
    <class>fr.sopra.model.game.Item</class>
    <class>fr.sopra.model.game.Sopramon</class>
    <class>fr.sopra.model.game.Signe</class>
    <class>fr.sopra.model.Administrateur</class>
    <class>fr.sopra.model.Utilisateur</class>
    <properties>
      <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/sopramon" />
      <property name="hibernate.connection.driver" value="com.mysql.jdbc.Driver" />
      <property name="hibernate.connection.user" value="root" />
      <property name="hibernate.connection.password" value="" />
      <!-- Permet d'exécuter les requêtes DDL pour la génération de la base de données -->
      <!-- Valeurs possibles : validate, update, create, create-drop -->
      <property name="hibernate.hbm2ddl.auto" value="update" />
      <!-- On utilise le moteur innoDB -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
      <!-- On imprime les requêtes SQL générées par Hibernate dans la console -->
      <property name="hibernate.show_sql" value="true" />
      <property name="hibernate.format_sql" value="true" />
    </properties>
  </persistence-unit>
</persistence>